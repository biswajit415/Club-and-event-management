@model University_Website.Models.ShareFormDL

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center style="margin-top:10%"><h2>Enter User Details</h2></center>
 <center><p style="color:red">@ViewBag.ValidationError</p></center>
@using (Html.BeginForm("EventShare", "Event", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="margin-left:25%;margin-right:20%; border:1px solid black;padding:0px;background-color:powderblue">


    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" style="margin-left:10%">
        @Html.LabelFor(model => model.UserID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-left:10%">
        @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-left:10%">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Share" class="btn btn-default btn-success" />
        </div>
    </div>
</div>


}

