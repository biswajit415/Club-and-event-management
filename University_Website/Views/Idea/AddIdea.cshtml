@model University_Website.Models.IdeaDL

@{
    ViewBag.Title = "AddIdea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<center style="margin-top:10%"><h2>Add Idea</h2></center>

@using (Html.BeginForm("AddIdea", "Idea", FormMethod.Post)) 
{
@Html.AntiForgeryToken()

<div class="form-horizontal" style="margin-left:25%;margin-right:20%; border:1px solid black;padding:0px;background-color:powderblue">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group" style="margin-left:10%">
        @Html.LabelFor(model => model.IdeaTitle, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.IdeaTitle, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IdeaTitle, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-left:10%">
        @Html.LabelFor(model => model.IdeaDescription, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.IdeaDescription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IdeaDescription, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group" style="margin-left:10%">
        @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" style="margin-left:10%">
        @Html.LabelFor(model => model.ClubName, htmlAttributes: new { @class = "control-label col-md-2" })


        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ClubName, new SelectList(@ViewBag.Clubs), "Select Club...", new { @class = "btn btn-primary dropdown-toggle btn-lg ", type = "button" })
            @Html.ValidationMessageFor(model => model.ClubName, "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="SUBMIT" class="btn btn-default btn-success" />
        </div>
    </div>
</div>
        }


