<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        li{
            font-size:25px;
            text-align:center;
        }
        footer {
            position: fixed;
            height:70px;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color:brown;
            color: white;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="height:60px;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse glyphicon-font">
                <ul class="nav navbar-nav">

                    <li>
                        @if (Session["AdminId"] != null)
                        {
                            @Html.ActionLink("Dash Board", "HomePage", "Home")
                        }
                    </li>
                    <li>
                        @if (Session["AdminId"] != null)
                        {
                            @Html.ActionLink("Create Event Story", "ShareEventStory", "Event")
                        }
                    </li>
                    <li>
                        @if (Session["AdminId"] != null || Session["UserId"] != null)
                        {
                            @Html.ActionLink("Services", "ServiceList", "Service")
                        }
                    </li>

                    <li>
                        @if (Session["UserId"] != null)
                        {
                            @Html.ActionLink("Notifications", "Notification", "Home")
                        }
                    </li>

                    <li>
                        @if (Session["UserId"] != null)
                        {
                            @Html.ActionLink("Home", "HomePage", "Home")
                        }
                    </li>
                    @if (Session["UserId"] == null && Session["AdminId"] == null)
                    {
                        <li style="left:400px">


                            @Html.ActionLink("LogIn", "login", "Auth")
                        </li>
                    }
                    else
                    {
                        <li>
                            @Html.ActionLink("LogOut", "logout", "Auth")
                        </li>
                    }







                    <li style="left:400px;padding-left:20px">

                        @if (Session["UserId"] == null && Session["AdminId"] == null)
                        {
                            @Html.ActionLink("Sign Up", "Registration", "Auth")

                        }

                    </li>

                    <li style="color:white;left:200px;margin-top:10px">
                        @Session["Name"]
                    </li>


                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="font-size:20px">&copy; @DateTime.Now.Year - University Website</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
